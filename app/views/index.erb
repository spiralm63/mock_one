<div class="container">
  <h1>User Skills and Levels</h1>

  <table>
  <tr>
    <th>Name</th><th>Skill</th><th>Years</th><th>Formal?</th>
  </tr>
  <% @users.each do |user| %>
  <tr class="new-user">
    <td><a href=""><%= user.name %></td>
    <td><%= user.proficiencies.first.skill.name %></td>
    <td><%= user.proficiencies.first.years %></td>
    <td><%= user.proficiencies.first.training %></td>
  </tr>

  <% user.proficiencies[1..-1].each do |proficiency| %>
  <tr>
    <td></td>
    <td><%= proficiency.skill.name %></td>
    <td><%= proficiency.years %></td>
    <td><%= proficiency.training %></td>
  </tr>
  <% end %>
  <% end %>
</table>

  <%# TODO: display the skills and proficiency levels for each user ... %>
</div>


